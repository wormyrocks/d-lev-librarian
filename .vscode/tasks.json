{
    "version": "2.0.0",
    "type": "shell",
    "command": "go",
    "cwd": "${workspaceFolder}",
    "tasks": [
        {
            "command": "go",
            "label": "Install dependencies",
            "args": [
                "install",
                "-v",
                "./..."
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "command": "go",
            "label": "Run without GUI",
            "args": [
                "run",
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "command": "go",
            "label": "Run with GUI",
            "args": [
                "run",
                "${workspaceFolder}",
                "webui"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "buildall",
            "command": "./build_all.sh",
            "group": "build"
        }
    ],
}